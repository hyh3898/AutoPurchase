<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.83">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/title_activity_main"
            android:src="@drawable/logo" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.1">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignLeft="@+id/imageView1"
            android:layout_alignRight="@+id/imageView1"
            android:layout_below="@+id/imageView1"
            android:background="@color/steel_blue"
            android:gravity="center_horizontal"
            android:text="@string/loan_summary"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:weightSum="1">
        <!-- TEXTVIEW HOLDING THE MONTHLY PAYMENT -->
        <!-- CAR PRICE INPUT SECTION -->

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/car_price"
                android:textColor="@color/steel_blue"
                android:textSize="12sp"
                android:layout_gravity="left" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="@string/down_payment"
                android:textColor="@color/steel_blue"
                android:textSize="12sp"
                android:layout_gravity="right"
                android:gravity="top|right" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:layout_marginTop="0dp">
            <!-- TEXTVIEW HOLDING THE CAR LOAN SUMMARY -->

            <EditText
                android:id="@+id/editText1"
                android:layout_width="288dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView3"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView3"
                android:ems="10"
                android:gravity="right"
                android:inputType="number"
                android:textColor="@color/steel_blue"
                android:width="90dp"
                android:layout_gravity="left">

                <requestFocus />
            </EditText>

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView5"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/textView5"
                android:ems="10"
                android:gravity="right"
                android:inputType="number"
                android:textColor="@color/steel_blue"
                android:width="90dp"
                android:layout_gravity="right">
            </EditText>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        android:layout_marginTop="0dp"
        android:weightSum="1">

        <!-- LOAN TERM SELECTION  -->
        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:background="@color/steel_blue"
            android:paddingRight="40dp"
            android:paddingLeft="20dp"
            android:layout_gravity="top"
            android:layout_weight="0.19">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/years2"
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/years3"
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/years4"
                android:textColor="@color/bone_white"
                android:textSize="12sp" />

        </RadioGroup>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/imageView2"
            android:src="@drawable/team" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:onClick="activateLoanSummary"
            android:text="@string/generate_btn"
            android:layout_gravity="bottom" />
    </LinearLayout>
</LinearLayout>